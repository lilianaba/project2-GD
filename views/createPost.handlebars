<article class="new-post">
    <section class="new-form-page">
        <div class="form-heading">
            <h2>Create New Blog Review</h2>
        </div>
        <div class="form-section">
            <form class="new-post-form">
                <div class="post-title-section">
                    <label for="post-title">Title</label>
                    <input type="text" id="title" name="title" />
                </div>
                <div class="post-content">
                    <label for="post_content">Content</label>
                    <textarea class="entry-field" id="post_content" name="post_content"></textarea>
                </div>
                <div class="post-rating-section">
                    <label for="rating">Rating 
        
       
                    <input type="radio" name="stars" value="5" id="rating" name="rating" />
                                 <span class="icon">â˜…</span>
                        </label>
                </div>
                <button type="submit" class="btn">Create</button>
            </form>
        </div>
    </section>
</article>


